<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Friends.FriendsListActivity" android:background="@android:color/holo_blue_bright">
    <TextView
            android:text="Friend List"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            android:background="@drawable/roundedheader" android:textStyle="bold" android:textSize="50sp"
            android:textColor="@android:color/background_light" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/textView3"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:id="@+id/recycler_view_for_friends" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.149"
            android:layout_marginBottom="250dp" android:layout_marginTop="32dp"/>
    <Button
            android:text="Friend requests"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_friend_reqs" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_find_friends"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:background="@drawable/roundedbuttoncorners" android:textColor="@android:color/background_light"
            android:textStyle="bold" android:textSize="20sp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Find Friends"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_find_friends" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_for_friends"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:background="@drawable/roundedbuttoncorners" android:textColor="@android:color/background_light"
            android:textStyle="bold" android:textSize="20sp"/>
    <Button
            android:text="back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_back" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_friend_reqs" app:layout_constraintEnd_toEndOf="@+id/button_friend_reqs"
            app:layout_constraintStart_toStartOf="@+id/button_friend_reqs" android:background="@drawable/roundedbuttoncorners"
            android:textColor="@android:color/background_light" android:textStyle="bold" android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>