<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@android:color/holo_blue_bright">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_name" app:layout_constraintStart_toEndOf="@+id/MyprofilePic_for_call"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/MyprofilePic_for_call"
            app:layout_constraintBottom_toBottomOf="@+id/MyprofilePic_for_call" android:textSize="20sp"
            android:textColor="@android:color/background_light" android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="60dp" android:layout_height="60dp"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="16dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:id="@+id/MyprofilePic_for_call"
                                                  app:civ_border_width="4dp"
                                                  app:civ_border_color="@android:color/white"
                                                  android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
                                                  app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>