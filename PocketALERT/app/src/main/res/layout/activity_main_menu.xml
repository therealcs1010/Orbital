<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenuActivity" android:background="@android:color/holo_blue_bright">
    <Button
            android:text="Friends"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_add_friends"
            app:layout_constraintStart_toStartOf="@+id/button_status_updates"
            app:layout_constraintEnd_toEndOf="@+id/button_status_updates"
            app:layout_constraintHorizontal_bias="0.542"
            android:background="@drawable/roundedbuttoncorners" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_status_updates" android:textSize="20sp"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAlignment="textStart"
            android:paddingLeft="20dp" android:drawableRight="@android:drawable/ic_menu_call"
            android:paddingEnd="10dp"/>
    <Button
            android:text="Status Updates"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_status_updates"
            android:background="@drawable/roundedbuttoncorners"
            android:textSize="20sp"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAlignment="textStart"
            android:paddingLeft="20dp" android:drawableRight="@android:drawable/ic_menu_call"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="@+id/button_nearby_alert"
            app:layout_constraintStart_toStartOf="@+id/button_nearby_alert" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_nearby_alert"/>
    <Button
            android:text="Nearby Alert"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_nearby_alert"
            app:layout_constraintStart_toStartOf="@+id/button_call_authorities"
            app:layout_constraintEnd_toEndOf="@+id/button_call_authorities"
            app:layout_constraintHorizontal_bias="0.542"
            android:background="@drawable/roundedbuttoncorners" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_call_authorities" android:textSize="20sp"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAlignment="textStart"
            android:paddingLeft="20dp" android:drawableRight="@android:drawable/ic_menu_call"
            android:paddingEnd="10dp"/>
    <Button
            android:text="Call authorities"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_call_authorities"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="1.0" android:background="@drawable/roundedbuttoncorners"
            android:textSize="20sp" android:textColor="@android:color/white" android:textStyle="bold"
            android:textAlignment="textStart" android:paddingLeft="20dp"
            android:drawableRight="@android:drawable/ic_menu_call" android:paddingEnd="10dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:text="Sign out"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_sign_out"
            app:layout_constraintStart_toStartOf="@+id/button_status_updates"
            app:layout_constraintEnd_toEndOf="@+id/button_status_updates"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/roundedbuttoncorners"
            android:textSize="20sp"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAlignment="textStart"
            android:paddingLeft="20dp"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:paddingEnd="10dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_my_profile"/>
    <Button
            android:text="my profile"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_my_profile"
            app:layout_constraintStart_toStartOf="@+id/button_status_updates"
            app:layout_constraintEnd_toEndOf="@+id/button_status_updates"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/roundedbuttoncorners"
            android:textSize="20sp"
            android:textColor="@android:color/white" android:textStyle="bold" android:textAlignment="textStart"
            android:paddingLeft="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_add_friends"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:paddingEnd="10dp"/>
    <ImageView
            android:src="@drawable/ic_add_alert"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>